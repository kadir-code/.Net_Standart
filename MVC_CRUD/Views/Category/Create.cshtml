@model MVC_CRUD.Models.DTO.CategoryDTO.CreateCategoryDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="margin-top:50px">
    <div class="row">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Create Category</h3>
            </div>

            <div class="box-body">
                <form action="/Category/Create" method="post">
                    <div class="form-group">
                        <label>Category Name</label>
                        <input type="text" class="form-control"id="name" name="Name" placeholder="Enter Category">

                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <input type="text" class="form-control"id="description" name="Description" placeholder="Description">
                    </div>

                    <button type="submit" id="x" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="box-footer">
                <a class="btn btn-warning btn-block" href="/Category/List?">Back to List</a>
            </div>

        </div>
    </div>

</div>

<script>
    $("body").on("click", "#x", function () {
        var name = $("#name");
        var description = $("#description");
        $.ajax({
            url: "/Category/Create",
            type: "post",
            dataType: "json",
            data: {
                "name": name.val(),
                "description": description.val()
            },
            success: function () {
                $(model).add();
                name.val("");
                description.val("");
            }
        });
    });
</script>